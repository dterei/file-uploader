extends layout

block content
  h1= title
  p Welcome to #{title}

  form(role='form', action="/upload", method="POST", enctype="multipart/form-data")
    .form-group
      label(for='suid') Student ID
      input.form-control(type='textfield', id='suid', name='suid', placeholder='SUID')
    .form-group
      label(for='submission') File Input
      p.help-block Please select your cabal generated tar file to upload
      input(type='file', name='submission')
    .form-group
      label(for='submission') Submission Comments
      p.help-block (Optional) message for teaching staff
      textarea.form-control(id='msg', name='msg')
      
    button(class='btn btn-primary', type='submit') Upload Submission
